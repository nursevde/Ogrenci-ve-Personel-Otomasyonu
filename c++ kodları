				  cout<<"Silme islemi gerceklesmistir."<<endl;
					
				}
				else {
					dosyaolustur2<<tc1<<endl;
				}
			}
			
			
			dosyaoku.close(); //Dosya okuma sonlandırıldı.
			dosyaolustur2.close(); //Oluşturulan dosya kapandı.
			
			remove("personeller.txt"); //Personeller dosyası silindi.
			rename("guncel.txt","personeller.txt"); //Güncel dosyasının adı perssoneller olarak değiştirildi.
		}
		
	
		//Öğrenci listeleme.
		else if(secim==8){
			
			ifstream dosyaoku("ogrenciler.txt"); //Öğrenciler dosyası okundu.
			
			string bilgi; //Okunan bilgi.
			
			while(!dosyaoku.eof()){
				
				getline(dosyaoku,bilgi); //Dosya sonuna kadar okundu ve bilgiye aktarıldı.
				
				cout<<bilgi<<endl; //Ekrana bütün öğrenciler yazdırıldı.
			}
			
			dosyaoku.close(); //Dosya okuma sonlandırıldı.
		}
		
		//Personel listeleme.
		else if(secim==9){
			
			ifstream dosyaoku("personeller.txt"); //Personeller dosyası okundu.
			
			string bilgi2; //Okunan bilgi.
			
			while(!dosyaoku.eof()){
				
				getline(dosyaoku,bilgi2); //Dosya sonuna kadar okundu ve bilgiye aktarıldı.
				
				cout<<bilgi2<<endl; //Ekrana bütün personeller yazdırıldı.
			}
			
			dosyaoku.close(); //Dosya okuma sonlandırıldı.
		}
		
		

//Öğrenci sorgulama.
    else if(secim==7){
	
	  string ogrencisorgula; //Sorgulanmak istenen öğrencinin TC kimlik numarası.
	
	
	cout<<"Sorgulamak istediginiz ogrencinin TC kimlik numarasini giriniz"<<endl;
	cin>>ogrencisorgula;
	
	ifstream dosyaoku("ogrenciler.txt"); //Öğrenciler dosyasını okuma.

	
	while (!dosyaoku.eof()){
		
		dosyaoku>>o.TCno>>o.adi>>o.soyadi>>o.ogrencino>>o.dogumtarihi>>o.bolumu>>o.kayittarihi>>o.derssayisi; //Dosyadakiler bu sırayla okundu.
		
		
		for(int i=1;i<=o.derssayisi;i++)	{
			
			
			dosyaoku>>o.dersadi[i]>>o.vize[i]>>o.kisasinav1[i]>>o.kisasinav2[i]>>o.odev[i]>>o.final[i]>>o.ortalama[i]>>o.harfnotu[i];
		   
			
	 }
	    if(o.TCno==ogrencisorgula){
	    	
	    	cout<<"Ogrencinin bilgileri"<<endl;
	    	
	    	cout<<"Ogencinin Tc kimlik numarasi : "<<o.TCno<<endl;
	    	cout<<"Ogencinin adi : "<<o.adi<<endl;
		    cout<<"Ogencinin soyadi : "<<o.soyadi<<endl;
		    cout<<"Ogencinin okul numarasi : "<<o.ogrencino<<endl;
		    cout<<"Ogencinin dogum tarihi : "<<o.dogumtarihi<<endl;
		    cout<<"Ogencinin bolumu : "<<o.bolumu<<endl;
		    cout<<"Ogencinin kayit tarihi : "<<o.kayittarihi<<endl;
		    
		    
		  		
 
		    	for(int i=1;i<=o.derssayisi;i++)	{
			
		            
		    		cout<<"Ders adi : "<<o.dersadi[i]<<endl;
					cout<<"Vize notu :"<<o.vize[i]<<endl;
					cout<<"1.kisa sinav notu :"<<o.kisasinav1[i]<<endl;
		            cout<<"2.kisa sinav notu : "<<o.kisasinav2[i]<<endl;
					cout<<"Odev notu : "<<o.odev[i]<<endl;
					cout<<"Final notu : "<<o.final[i]<<endl;
					cout<<"Ortalama : "<<o.ortalama[i]<<endl;
					cout<<"Harf notu : "<<o.harfnotu[i]<<endl;
		           
		               		
					}

				     dosyaoku.close();  //Dosya okuma sonlandırıldı.
				     break;
		           
		}    		    
	    
		else{
			
        	cout<<"Aradiginiz ogrenci sistemde kayitli degildir."<<endl;
        	break;
        	
		    }         
     }
	
}
       
    else{
    	
        	cout<<"Gecersiz bir islem yaptiniz lutfen tekrar deneyiniz."<<endl;
        	
	    }
	
		
	}while(1==1);
	

	
	system("PAUSE");
	return 0;
}                                                                                                                                                                      
